<div class="row">
	<div class="pic col s1 offset-s3">
		<%= image_tag "bucket.png", size: "50x50" %>
	</div>
	<div class="col s4">
			<h3 class="center-align"> Your Bucket Lists! </h3>
	</div>
	<div class="pic col s1">
		<%= image_tag "bucket.png", size: "50x50" %>
	</div>
</div>

<div class="row">
  <div class="col s9">
    <div class="search">
    	<%= form_tag(lists_path, :method => "get", id: "search-form") do %>
    		<%= text_field_tag :search, params[:search], placeholder: "Search" %>
    		<%= submit_tag "Search" %>
    	<% end %>
    </div>
  </div>
  <div class="col s2 offset-s1 valign-wrapper">
  	<div class="btn-large waves-effect waves-light #0d47a1 blue darken-4">
			<%= link_to "Add", new_list_path, class: "valign"%>
		</div>
	</div>
</div>

<h3><%= @no_lists %> </h3>
	<div class="row">
  	<% @lists.each do |list| %>
      <div class="col s12 m3">
        <div class="card #0d47a1 blue darken-4">
        	<div class="card-image">
        		<%= image_tag("mt_rainier.jpeg") %>      
          </div>
          <div class="card-title">
            <span class="center-align"><%= link_to list.name, list_path(list) %></span> 
          </div>
          <div class="card-action">
          	<p class="center-align white-text">You have <%= list.items.count %> items on this list</p>
          </div>
        </div>
      </div>
  	<% end %>
  </div>

