<div class="row">
	<div class="pic col s1 offset-s3">
		<%= image_tag "bucket.png", size: "50x50" %>
	</div>
	<div class="col s4">
			<h3 class="center-align"> Edit '<%= @list.name %>' </h3>
	</div>
	<div class="pic col s1">
		<%= image_tag "bucket.png", size: "50x50" %>
	</div>
</div>
<% if current_user.id == @list.user_id %>
	<%= render(partial: 'form') %>
<% else %>
		<h3 class="center-align">You don't have permission to edit this list</h3>
<% end %>
<hr>
<%= link_to "Back to #{@list.name}", list_path(@list) %> ||
<%= link_to 'All lists', lists_path %>